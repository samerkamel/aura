#!/bin/bash
# Terminal setup for Aura ERP Laravel project

# Project directory
export PROJECT_ROOT="/var/www/vhosts/aura.llc/erp.aura.llc"

# Laravel aliases
alias art="php artisan"
alias serve="php artisan serve --host=0.0.0.0 --port=8000"
alias migrate="php artisan migrate"
alias seed="php artisan db:seed"
alias fresh="php artisan migrate:fresh --seed"
alias cache="php artisan config:cache && php artisan route:cache && php artisan view:cache"
alias clear-cache="php artisan config:clear && php artisan route:clear && php artisan view:clear"
alias tinker="php artisan tinker"

# Development helpers
alias ll="ls -la"
alias lsl="ls -la | less"
alias ..="cd .."
alias ...="cd ../.."

# Git aliases
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git log --oneline"

# NPM/Node aliases
alias dev="npm run dev"
alias build="npm run build"
alias watch="npm run watch"

# Composer aliases
alias ci="composer install"
alias cu="composer update"
alias cr="composer require"
alias cda="composer dump-autoload"

# Laravel specific functions
function artisan() {
    php artisan "$@"
}

function module() {
    if [ "$1" = "make" ] && [ "$2" ]; then
        php artisan module:make "$2"
    elif [ "$1" = "list" ]; then
        php artisan module:list
    else
        echo "Usage: module make <ModuleName> | module list"
    fi
}

function dbseed() {
    if [ "$1" ]; then
        php artisan db:seed --class="$1"
    else
        php artisan db:seed
    fi
}

# Welcome message
echo "üöÄ Aura ERP Terminal Setup Loaded!"
echo "üìç Current Project: $(basename $PROJECT_ROOT)"
echo ""
echo "üõ†Ô∏è  Available Commands:"
echo "  art          - php artisan shortcut"
echo "  migrate      - Run migrations"
echo "  seed         - Run seeders"
echo "  fresh        - Fresh migrate with seed"
echo "  cache        - Cache config/routes/views"
echo "  clear-cache  - Clear all caches"
echo "  tinker       - Laravel Tinker"
echo "  dev          - npm run dev"
echo "  build        - npm run build"
echo "  module       - Module management"
echo ""
echo "üìÇ Project Structure:"
echo "  Modules/     - Laravel modules"
echo "  public/      - Web root"
echo "  database/    - Migrations & seeders"
echo ""